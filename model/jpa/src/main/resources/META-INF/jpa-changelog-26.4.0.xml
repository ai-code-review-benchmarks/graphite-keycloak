<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="keycloak" id="26.4.0-40933-saml-encryption-attributes">
        <customChange class="org.keycloak.connections.jpa.updater.liquibase.custom.JpaUpdate26_4_0_SamlEncryptionAttributes"/>
    </changeSet>

    <changeSet id="40343-RLM-resource-policy-state-table" author="keycloak">
        <createTable tableName="RLM_POLICY_STATE">
            <column name="RESOURCE_ID" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="POLICY_ID" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="POLICY_PROVIDER_ID" type="VARCHAR(255)" />
            <column name="RESOURCE_TYPE" type="VARCHAR(255)" />
            <column name="LAST_COMPLETED_ACTION_ID" type="VARCHAR(255)" />
            <column name="LAST_UPDATED_TIMESTAMP" type="BIGINT" />
        </createTable>

        <addPrimaryKey
            constraintName="PK_RLM_POLICY_STATE"
            tableName="RLM_POLICY_STATE"
            columnNames="RESOURCE_ID, POLICY_ID" />

        <createIndex indexName="IDX_RES_POLICY_STATE_ACTION"
                     tableName="RLM_POLICY_STATE">
            <column name="POLICY_ID" />
            <column name="LAST_COMPLETED_ACTION_ID" />
        </createIndex>

        <createIndex indexName="IDX_RES_POLICY_STATE_PROVIDER"
                     tableName="RLM_POLICY_STATE">
            <column name="RESOURCE_ID" />
            <column name="POLICY_PROVIDER_ID" />
        </createIndex>

        <!-- constraint to ensure that each resource has only one policy of a specific type -->
        <addUniqueConstraint
            constraintName="UC_RES_POLICY_PROVIDER_ID"
            tableName="RLM_POLICY_STATE"
            columnNames="RESOURCE_ID, POLICY_PROVIDER_ID"
        />
    </changeSet>

    <changeSet id="RLM-add-last-auth-time-to-user-entity" author="keycloak">
        <addColumn tableName="USER_ENTITY">
            <column name="LAST_AUTHENTICATION_TIME" type="BIGINT" />
        </addColumn>

        <createIndex indexName="IDX_USER_LAST_AUTH_TIME"
                     tableName="USER_ENTITY">
            <column name="LAST_AUTHENTICATION_TIME" />
        </createIndex>
    </changeSet>

    <changeSet id="RLM-create-resource-policy-table" author="keycloak">
        <createTable tableName="RLM_POLICY">
            <column name="ID" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="REALM_ID" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="NAME" type="VARCHAR(255)" />
            <column name="PROVIDER_ID" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="RLM-create-resource-action-table" author="keycloak">
        <createTable tableName="RLM_ACTION">
            <column name="ID" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="PROVIDER_ID" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="STABLE_ID" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="PRIORITY" type="INT">
                <constraints nullable="false" />
            </column>
            <column name="AFTER_MS" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="POLICY_ID" type="VARCHAR(255)">
                <constraints nullable="false" foreignKeyName="FK_ACTION_TO_POLICY" references="RLM_POLICY(ID)" />
            </column>

            <!-- we always load all actions for a single policy at once, the index ensures that the db can return the actions in their correctly sorted order effitiently -->
            <createIndex indexName="IDX_ACTION_PRIORITY"
                         tableName="RESOURCE_ACTION">
                <column name="PRIORITY" />
            </createIndex>
        </createTable>
    </changeSet>

</databaseChangeLog>
