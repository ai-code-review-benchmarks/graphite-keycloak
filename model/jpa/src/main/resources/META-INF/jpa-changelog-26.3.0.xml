<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="keycloak" id="26.3.0-groups-description">
        <addColumn tableName="KEYCLOAK_GROUP">
            <column name="DESCRIPTION" type="NVARCHAR(255)" />
        </addColumn>
    </changeSet>

    <changeSet author="keycloak" id="26.3.0-composite-index-optimization">

        <!-- Improves the query plan by favoring an index scan and a reduced total cost, plan and execution time when querying user memberships-->
        <createIndex unique="true" indexName="constraint_user_group_by_user" tableName="USER_GROUP_MEMBERSHIP">
            <column name="USER_ID" type="VARCHAR(36)"/>
            <column name="GROUP_ID" type="VARCHAR(36)"/>
        </createIndex>

        <!-- Improves the query execution to be less resource intensive due to favoring an index scan and reducing the overall cost when querying user role mappings -->
        <createIndex unique="true" indexName="constraint_user_role_by_user" tableName="USER_ROLE_MAPPING">
            <column name="USER_ID" type="VARCHAR(36)"/>
            <column name="ROLE_ID" type="VARCHAR(255)"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
